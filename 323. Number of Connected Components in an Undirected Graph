// union find
class Solution {
    int sum;
    int[] parent;
    public int countComponents(int n, int[][] edges) {
        parent = new int[n];
        for (int i = 0; i < n; i++) {
            parent[i] = i;
        }
        sum = n;
        for (int[] edge : edges) {
            int p1 = find(edge[0]);
            int p2 = find(edge[1]);
            if (p1 != p2) {
                parent[p1] = p2;
                sum--;
            }
        }
        return sum;
    }
    private int find(int node) {
        int cur = node;
        while (cur != parent[cur]) {
            cur = find(parent[cur]);
        }
        while (node != cur) {
            int pa = parent[node];
            parent[node] = cur;
            node = pa;
        }
        return node;
    }
}
